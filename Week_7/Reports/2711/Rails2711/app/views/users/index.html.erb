
<%= search_form_for @q do |f| %>
  <%= f.label :age %>
  <%= f.search_field :age_cont %>
  <%= f.label :updated_at_gt, "Ngay bat dau" %>
  <%= f.date_field :updated_at_gt, class: "form-control" %>
  <%= f.label :updated_at_lt, "Ngay ket thuc" %>
  <%= f.date_field :updated_at_lt, class: "form-control" %>
  <%= f.submit 'Search' %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>List Users</h1>
      <%= sort_link(@q, :age, {}, { class: "d-flex justify-content-center" }) %>
      <% @users.each do |user| %>
        <div class="card my-3">
          <div class="card-body d-flex justify-content-between ">
            <h2><%= user.name %></h2>
            <p>Age: <%= user.age %></p>
            <p>Created: <%= user.created_at.strftime("%d %m %Y")%></p>
            <p>Updated: <%= user.updated_at.strftime("%d %m %Y")%></p>
            <%= link_to 'Detail', user, class: 'btn btn-primary mr-2' %>
          </div>
        </div>
      <% end %>
      <%= link_to 'Add user', new_user_path, class: 'btn btn-success mt-3' %>
    </div>
  </div>
</div>
<%== pagy_bootstrap_nav(@pagy) %>